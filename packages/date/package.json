{
  "name": "@ztils/date",
  "description": "Date utilities",
  "type": "module",
  "version": "0.4.4",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/johngerome/ztils"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "test": "vitest"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./timeAgo": {
      "types": "./dist/timeAgo.d.ts",
      "import": "./dist/timeAgo.js"
    },
    "./getCurrentWeek": {
      "types": "./dist/getCurrentWeek.d.ts",
      "import": "./dist/getCurrentWeek.js"
    },
    "./getMonthToday": {
      "types": "./dist/getMonthToday.d.ts",
      "import": "./dist/getMonthToday.js"
    },
    "./getTotalWeeksInMonth": {
      "types": "./dist/getTotalWeeksInMonth.d.ts",
      "import": "./dist/getTotalWeeksInMonth.js"
    },
    "./toFormalDate": {
      "types": "./dist/toFormalDate.d.ts",
      "import": "./dist/toFormalDate.js"
    },
    "./toFullDate": {
      "types": "./dist/toFullDate.d.ts",
      "import": "./dist/toFullDate.js"
    },
    "./toISODate": {
      "types": "./dist/toISODate.d.ts",
      "import": "./dist/toISODate.js"
    },
    "./toShortDate": {
      "types": "./dist/toShortDate.d.ts",
      "import": "./dist/toShortDate.js"
    }
  },
  "peerDependencies": {
    "date-fns": "^4.0.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "date-fns": "^4.1.0",
    "typescript": "5.8.2"
  }
}
